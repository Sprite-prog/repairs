/* pages/sq-wenti/sq-wenti.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.wenti-text {
  font-size: 24rpx;
  margin-left: 24rpx;
}
.tiandan {
  width: 100%;
  padding-top: 38rpx;
  background-color: #f1f1f1;
  padding-bottom: 38rpx;
}
.jiantou {
  display: block;
  font-size: 24rpx;
  margin-right: 24rpx;
}

.method {
  display: flex;
  flex-direction: column;
  width: 630rpx;
  /* height: 202rpx; */
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
 margin: 14rpx auto;
 border: #dbdada solid 2rpx;
}
.content{
  width: 600rpx;
  margin: 15rpx 2rpx 15rpx;
  border-left: 4rpx solid #f8c800;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tiandan-text-big_way {
  font-size: 24rpx;
  color: #000;
  padding-left: 11rpx;
}
.method_text{
margin-left: 24rpx;
margin-right: 24rpx;
margin-bottom: 40rpx;
font-size: 18rpx;
letter-spacing: 2rpx;
line-height: 35rpx;

}

.tiandanbtn {
  display: flex;
  width: 204rpx;
  height: 68rpx;
  margin: 50rpx auto;
  background-color: #f8c800;
  border-radius: 8rpx;
}
.menu{
display: flex;
height: 38rpx;
}
.menu dt{
  font-size: 20rpx;
  float: left;
  width: 49.7%;
  height: 38px;
  text-align: center;
  line-height: 38rpx;
  background-color: #ffffff;
}
.menu dd{
  position: absolute;
  width: 100%;

}
.menu li{
  margin-top: 100rpx;
  height: 200rpx; 
  font-size: 14px;
  background-color: #F3F1EF;
  line-height: 40px;
  display: block;
  padding-left: 8px;
}
.select{
    color:red;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.a-wei{
  margin-left: 50rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

radio{
  font-size: 24rpx;
  transform: scale(0.8);
  margin-top: 20rpx;
  margin-left: 60rpx;
 }
 .dissatisfied{
   margin-left: 30rpx;
   font-size: 24rpx;
 }
 .wenti{
   margin-top: 30rpx;
 }

 /* 星星 */
 .assess-pages {
  padding: 10rpx 0;
  background-color: rgb(250, 250, 250);
  min-height: 100rpx;
  box-sizing: border-box;
}

.wrapper-item {
  height: 166rpx;
  width: 100%;
  border-radius: 8rpx;
  padding: 20rpx 35rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.title-img {
  display: inline-block;
}

.title-img image {
  height: 136rpx;
  width: 136rpx;
  border-radius: 50%;
}

.main-info {
  display: inline-block;
  width: 68vw;
  margin-left: 20rpx;
}

.info-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name-desc {
  text-align: left;
  margin-bottom: 10rpx;
}

.info-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
}

.info-desc {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 30rpx;
}

.reser-time {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.info-bottom {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
  margin-top: 10rpx;
}

.info-hospital {
  margin-right: 30rpx;
}

.info-bottom .icon {
  display: inline-block;
  height: 13rpx;
  width: 13rpx;
  border-radius: 50%;
  margin-right: 4rpx;
  margin-bottom: 5rpx;
}

.icon-hospital {
  background-color: rgb(159, 231, 80);
}

.icon-team {
  background-color: rgba(123, 201, 219, 0.356);
}

.assess-body {
  background-color: #fff;
  padding: 25rpx 0;
  margin-top: 20rpx;
}

.assess-title {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  text-align: center;
}

.assess-star {
  margin-top: 20rpx;
}

.star-wrap {
  width: 50vw;
  margin: 10rpx auto 10rpx auto;
}

.star-item {
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}

.star-desc {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(243, 162, 0, 1);
  text-align: center;
}

.assess-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 75vw;
  margin: 5rpx auto 30rpx auto;
}

.item-assess {
  height: 50rpx;
  line-height: 50rpx;
  width: 32vw;
  border: 1px solid #eee;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  margin-top: 16rpx;
  border-radius: 6rpx;
}

textarea {
  width: 75vw;
  margin: 0 auto;
  border: 1px solid #eee;
  border-radius: 5rpx;
  padding: 15rpx;
  height: 180rpx;
  font-size: 24rpx;

}

.place-assess {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.assess-submint {
  margin: 20rpx auto 0 auto;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f8c800;
  font-size: 25rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
}
